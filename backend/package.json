{
  "name": "travel-backend",
  "version": "1.0.0",
  "description": "Backend API for Travel booking and community platform",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "seed:destinations": "node scripts/seedDestinations.js",
    "seed:more-destinations": "node scripts/seedMoreDestinations.js",
    "build": "node -e \"console.log('Verifying dependencies...')\" && npm install --omit=dev && node -e \"console.log('Build completed successfully!')\""
  },
  "keywords": [
    "travel",
    "booking",
    "community",
    "api",
    "express",
    "mongodb"
  ],
  "author": "Travel Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0",
    "razorpay": "^2.9.2",
    "stripe": "^14.7.0",
    "nodemailer": "^6.9.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
